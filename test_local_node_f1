#!/bin/bash
echo "-------------------------------------------------IN-------------------------------------------------------"
JSONIN='{
  "call": "test_function_01",
  "args": ["hello", "how", "are", "you", "?"]
}'

echo $JSONIN  | jq .
echo "------------------------------------------------OUT-------------------------------------------------------"

JSONOUT="$(curl -s -X POST -H "Content-Type: application/json" -d "$JSONIN" http://127.0.0.1:8635)"
echo '{'$(echo -e ${JSONOUT:1:-1})'}' | jq .

echo "------------------------------------------------END-------------------------------------------------------"
